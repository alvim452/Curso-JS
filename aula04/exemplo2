    var idade = prompt("Qual é a sua idade? ")
    var bairro = prompt("Em qual bairro você mora? ")
    var comida = prompt("O que você mais gosta de comer? ")
    alert(`Olá, meu nome é ${nome}, eu tenho ${idade} e moro no no bairro ${bairro}`)
    alert(`Eu gosto de comer muito ${comida}`)


    </script>
